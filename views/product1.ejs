    <!-- Product Page -->
    <div class="container my-5">
      <div class="row">
        <!-- Product Image -->
        <div class="col-md-6">
          <img
            src="/images/district-img/final1.jpeg"
            alt="Spice Product 1"
            class="img-fluid"
            style="width: 500px; height: auto"
          />
        </div>
        <!-- Product Details -->
        <div class="col-md-6">
          <h1>Spice Product 1</h1>
          <p class="lead">Premium Spice from District Kathua</p>
          <h2 class="text-success">&#x20B9; 249.75</h2>
