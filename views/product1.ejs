        </div>
      </div>
    </div>

    <!-- Reviews Section -->
    <div class="container my-5">
      <h2>Customer Reviews</h2>
      <!-- Single Review -->
      <div class="review">
        <img
          src="/images/district-img/avatar.jpg"
